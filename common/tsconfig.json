{
  "compilerOptions": {
    "allowJs": true,
    "target": "es2020",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "node", "@types/webpack"
    ],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
  }
}
